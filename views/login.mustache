<script>
    $('#next').click(function () {
        if ($('#overlay-2')[0].style.display === 'none') {
            $('#overlay-1').fadeOut('slow');
            $(this).fadeOut('fast');
        }
        else {
            $('#overlay-2').fadeOut('slow');
            $('#welcome').slideUp('fast');
        }
    });

    $(function(){
        var x = 0;
        var y = 0;
        setInterval(function(){
            if (x > -280 && y > -280) {
                x-=1;
                y-=1;
            }
            $('#overlay-1').css('background-position', x + 'px ' + y + 'px');
        }, 250);
    })
</script>
