<body>
<div id="main">
    <div id="wrap">
        <div id="status"><span></span></div>
        <div id="map"></div>
    </div>
</div>

<div id="clouds">
    <div id="preloader"></div>
</div>

<!-- template's -->
<div class="templates">
    <!-- dot popup template -->
    <script type="text/html" id="dot-popup-template">
        <div class="dot-container" id="<%= id %>">
            <span class="dot-edit"></span>
            <span class="dot-destroy"></span>

            <div class="dot-nav">
                <a href="/gallery/<%= id %>/1.jpg" class="fancybox" data-fancybox-group="<%= id %>"><img
                        src="<%= image %>" width="80" height="80" alt="" class="dot-image"/></a>
            </div>

            <div class="dot-description">
                <div class="dot-title"><%= title %></div>
                <div class="dot-text"><%= text %></div>

                <table class="dot-contacts">
                    <tr>
                        <td colspan="2">
                            <mark>Адрес:</mark>
                            <%= address %> <%= street %> <%= house %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <mark>Тел.:</mark>
                            <%= homePhone %>
                        </td>
                        <td>
                            <mark>Моб.:</mark>
                            <%= mobilePhone %>
                        </td>
                    </tr>
                </table>

                <div class="dot-gallery">
                    <% if (gallery) { _.each(gallery, function (imageURL) { %> <a
                        href="/gallery/<%= id %>/<%= imageURL %>" class="fancybox" data-fancybox-group="<%= id %>"></a>
                    <% }); } %>
                </div>
            </div>
        </div>
    </script>

